<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
            overflow: hidden;
        }

        .container-wrapper {
            display: flex;
            height: 100vh;
            width: 100vw;
            overflow: hidden;
        }

        /* Левая панель - 40% */
        .left-panel {
            flex: 0 0 40%; 
            background-color: white;
            overflow-y: auto;
            min-width: 300px;
        }

        /* Правая панель - 60% */
        .right-panel {
            flex: 1; 
            background-color: white;
            overflow-y: auto;
            min-width: 300px;
        }

        .resize-handle {
            width: 5px;
            background-color: #6c757d;
            cursor: col-resize;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            flex-shrink: 0;
        }

            .resize-handle:hover {
                background-color: #495057;
            }
    </style>
</head>
<body>
    <div class="container-wrapper">
        <!-- Левая панель 40% -->
        <div class="left-panel" id="leftPanel">
            @await Html.PartialAsync("_LeftPanel")
        </div>

        <!-- Разделитель -->
        <div class="resize-handle" id="resizer">⋮</div>

        <!-- Правая панель 60% -->
        <div class="right-panel" id="rightPanel">
            @await Html.PartialAsync("_RightPanel")
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Изменение размеров
        document.addEventListener('DOMContentLoaded', function() {
            const resizer = document.getElementById('resizer');
            const leftPanel = document.getElementById('leftPanel');
            const rightPanel = document.getElementById('rightPanel');

            let isResizing = false;
            let startX, startLeftWidth;

            resizer.addEventListener('mousedown', function(e) {
                isResizing = true;
                startX = e.clientX;
                startLeftWidth = leftPanel.offsetWidth;

                document.addEventListener('mousemove', mouseMoveHandler);
                document.addEventListener('mouseup', mouseUpHandler);
                e.preventDefault();
            });

            function mouseMoveHandler(e) {
                if (!isResizing) return;

                const dx = e.clientX - startX;
                let newLeftWidth = startLeftWidth + dx;

                // Минимальная ширина панелей
                const minWidth = 300 + 5;
                const maxWidth = window.innerWidth - minWidth;

                // Ограничиваем размер
                newLeftWidth = Math.max(minWidth, Math.min(newLeftWidth, maxWidth));

                // Применяем новую ширину
                leftPanel.style.flex = `0 0 ${newLeftWidth}px`;
                rightPanel.style.flex = '1';
            }

            function mouseUpHandler() {
                isResizing = false;
                document.removeEventListener('mousemove', mouseMoveHandler);
                document.removeEventListener('mouseup', mouseUpHandler);
            }
        });
    </script>

    @{
        IgnoreBody();
    }
</body>
</html>